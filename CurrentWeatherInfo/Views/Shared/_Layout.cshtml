<!DOCTYPE html>
<!--[if IE 8]>         <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html>
<!--<![endif]-->
<head>
    <title>@ViewBag.Title - Current Weather Information</title>
    <meta name="description" content="Check up the weather information" />
    <meta name="keywords" content="weather, information, meteorologic, check, location, free" />
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />

    @Styles.Render("~/Content/foundation/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="row">
        <div class="row">
            <div id="logo" class="large-6 column">
                <div id="logo_text">
                    <h1><a href="/">
                        <span class="logo_colour">Weather</span><span>Info</span>
                    </a></h1>
                    <h2>Simple. Current. Accurate.</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div id="menubar" class="large-10 column right">
                @Html.Partial("_NavigationPartial")
            </div>
        </div>
    </header>
    <section id="site_content" class="row">
        <div id="content" class="large-4 column">
            @RenderBody()
        </div>
        <aside id="sidebar_container" class="large-4 column">
            <div class="sidebar">
                <div class="sidebar_top"></div>
                <div class="sidebar_item">
                    <!-- insert your sidebar items here -->
                    <h3>Latest News</h3>
                    <h4>New Website Launched</h4>
                    <h5>August 15th, 2013</h5>
                    <p>
                        2013 sees the redesign of our website. Take a look around and let us know what you think.<br>
                        <a href="#">Read more</a>
                    </p>
                </div>
                <div class="sidebar_base"></div>
            </div>
            <div class="sidebar">
                <div class="sidebar_top"></div>
                <div class="sidebar_item">
                    <h3>Useful Links</h3>
                    <ul>
                        <li><a href="#">link 1</a></li>
                        <li><a href="#">link 2</a></li>
                        <li><a href="#">link 3</a></li>
                        <li><a href="#">link 4</a></li>
                    </ul>
                </div>
                <div class="sidebar_base"></div>
            </div>
            <div class="sidebar">
                <div class="sidebar_top"></div>
                <div class="sidebar_item">
                    <h3>Search</h3>
                    <form method="post" action="#" id="search_form">
                        <p>
                            <input class="search" name="search_field" value="Enter keywords....." type="text">
                            <input name="search" style="border: 0; margin: 0 0 -9px 5px;" src="~/Images/search.png" alt="Search" title="Search" type="image">
                        </p>
                    </form>
                </div>
                <div class="sidebar_base"></div>
            </div>
        </aside>
    </section>
    <footer class="row">
        <div class="large-12 column center">
            <p>Copyright © 2013| <a href="http://validator.w3.org/check?uri=referer">HTML5</a> | <a href="http://jigsaw.w3.org/css-validator/check/referer">CSS</a> | <a href="http://www.html5webtemplates.co.uk/">design from HTML5webtemplates.co.uk</a></p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery", "~/bundles/foundation", "~/bundles/sammy")
    <script>
        $(document).foundation();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
